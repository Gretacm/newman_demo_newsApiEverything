			"name": "Negative",
			"item": []
		},
		{
			"name": "Positive",
			"item": [
				{
					"name": "Get news",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"function setupHeaders(){",
									"const apiKey = pm.collectionVariables.get(\"apiKey\");",
									"",
									"const objectApiKey ={",
									"    key: \"X-Api-Key\",",
									"    value: apiKey",
									"}",
									"pm.request.headers.add(objectApiKey);",
									"",
									"};",
									"setupHeaders();"
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"let newsTitle= pm.collectionVariables.get(\"newsTitle\")",
									"pm.test(`All articles titles has ${newsTitle}`, function () {",
									"    let jsonData = pm.response.json();",
									"    jsonData.articles.forEach(article => {",
									"        pm.expect(article.title).to.include(newsTitle);",
									"    });",
									"});",
									" ",
									" pm.test(\"Status must be 'ok'\", function () {",
									"    pm.expect(pm.response.json().status).to.eql(\"ok\");",
									"});",
									"",
									"pm.test(\"totalResults must be number and equal to articles length\", function () {",
									"    let jsonData = pm.response.json();",
									"    pm.expect(jsonData.totalResults).to.be.a('number');",
									"    if(jsonData.totalResults > 100){",
									"        pm.expect(jsonData.articles.length).to.eql(100);",
									"    }else{",
									"        pm.expect(jsonData.totalResults).to.eql(jsonData.articles.length);",
									"    }",
									"});",
									" "
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"protocolProfileBehavior": {
						"disableBodyPruning": true
					},
					"request": {
						"auth": {
							"type": "apikey",
							"apikey": [
								{
									"key": "key",
									"value": "X-Api-Key",
									"type": "string"
								},
								{
									"key": "value",
									"value": "{{apiKey}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}v2/everything?q={{newsTitle}}&searchIn=title",
							"host": [
								"{{baseUrl}}v2"
							],
							"path": [
								"everything"
							],
							"query": [
								{
									"key": "q",
									"value": "{{newsTitle}}"
								},
								{
									"key": "searchIn",
									"value": "title"
								}
							]
						}
					},
					"response": []
				}
			]
		}
	],
